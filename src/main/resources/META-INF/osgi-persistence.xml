<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="prototype" transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=jdbc/blogdb)</jta-data-source>
		<class>de.gzockoll.prototype.actorrole.entity.actor.Person</class>
		<class>de.gzockoll.prototype.actorrole.entity.actor.Organization</class>
		<class>de.gzockoll.prototype.actorrole.entity.role.Agency</class>
		<class>de.gzockoll.prototype.actorrole.entity.role.Dealer</class>
		<class>de.gzockoll.prototype.actorrole.entity.role.Promotor</class>
		<class>de.gzockoll.prototype.actorrole.entity.role.SalesLine</class>
		<class>de.gzockoll.prototype.actorrole.entity.role.Salesman</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="openjpa.Log" value="DefaultLevel=INFO" />
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
			<property name="openjpa.jdbc.DBDictionary" value="derby" />
		</properties>
	</persistence-unit>
</persistence>